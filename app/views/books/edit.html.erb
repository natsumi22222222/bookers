<h1>Editing Book</h1>

<% if @book.errors.any? %>
   <%= @book.errors.count %> errors prohibited this book from being saved:
   <ul>
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
   </ul>
   <% end %>
<% end %>

<%= form_with model: @book, local: true ,url: book_path(@book.id), method: :patch do |f|%>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>


<%= link_to"Show",book_path(@book.id)%>
<%= link_to"Back",books_path %>
